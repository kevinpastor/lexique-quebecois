{
    "name": "quebecois-urbain",
    "version": "0.1.0",
    "description": "",
    "author": "Kevin Pastor",
    "license": "MIT",
    "workspaces": [
        "client",
        "server",
        "shared"
    ],
    "scripts": {
        "client": "npm run --workspace=client",
        "server": "npm run --workspace=server",
        "shared": "npm run --workspace=shared",
        "build:prod": "docker build --tag quebecois-urbain --file ./Dockerfile .",
        "start:prod": "docker run --detach --publish 80:80 --env-file ./.env --name quebecois-urbain quebecois-urbain",
        "debug:prod": "docker run --rm -it --entrypoint sh quebecois-urbain",
        "release:prod": "npm run build:prod && npm run start:prod"
    }
}
