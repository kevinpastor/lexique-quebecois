{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "noPropertyAccessFromIndexSignature": true,
        "downlevelIteration": true,
        "paths": {
            // Workaround while the library isn't marked with `"use client"`. This path is also referenced in the ESLint configuration.
            "@mui/material": [
                "./src/material"
            ],
            "@app/*": [
                "./src/app/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "~types/*": [
                "./src/types/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        ".next/types/**/*.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}