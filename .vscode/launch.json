{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm start"
        },
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}